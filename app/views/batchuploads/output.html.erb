<% if @identifiers.nil? %>
  <h3>No batch uploads present</h3>
<% else %>
  <% @identifiers.each do |id| %>
    <h3><%= id.identifier %>: <%= id.records.length %> records, <%= id.record_errors.length %> errors </h3>
    <table class="table table-sm table-striped">
    <thead>
      <tr>
      <% ["Row", "Phone", "Email", "First", "Last"].each do |hdr| %>
        <th><%= hdr %></th>
      <% end %>
      </tr>
    </thead>
    <tbody>
    <% id.records.each do |rec| %>
      <tr>
      <% [rec.row, rec.phone, rec.email, rec.first, rec.last].each do |data| %>
        <td><%= data %></td>
      <% end %>
      </tr>
    <% end %>
    </tbody>
    </table>
    <% if id.record_errors.length != 0 %>
      <p>Errors:</p>
      <table class="table table-sm table-dark table-striped">
      <thead>
        <tr>
        <% ["Row", "Error"].each do |hdr| %>
          <th><%= hdr %></th>
        <% end %>
        </tr>
      </thead>
      <tbody>
      <% id.record_errors.each do |err| %>
        <tr>
          <% [err.row, err.text].each do |data| %>
            <td><%= data %></td>
          <% end %>
        </tr>
      <% end %>
      </tbody
      </table>
    <% end %>
  <% end %>
<% end %>